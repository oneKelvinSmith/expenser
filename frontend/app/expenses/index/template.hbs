<div class="page-header">
  <h1>Expenses</h1>
</div>

<p>
  {{link-to "New Expense" "expenses.new" class="btn btn-default"}}
</p>

{{#if model.length}}
  <table class="table table-hover">
    <thead>
      <tr>
        <th>
          Date
        </th>
        <th>
          Time
        </th>
        <th>
          Description
        </th>
        <th>
          Amount
        </th>
        <th>
          Comment
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |expense|}}
        <tr id="expense-{{expense.id}}">
          <td>
            {{format-date expense.datetime}}
          </td>
          <td>
            {{format-time expense.datetime}}
          </td>
          <td>
            {{expense.description}}
          </td>
          <td>
            {{format-currency expense.amount}}
          </td>
          <td>
            {{expense.comment}}
          </td>
          <td>
            {{link-to "Edit" "expenses.edit" expense}}
          </td>
          <td>
            {{link-to "Show" "expenses.show" expense}}
          </td>
          <td>
            <a href="#" {{action "remove" expense}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Expenses found
  </p>
{{/if}}
