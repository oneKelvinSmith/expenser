<form class="form-horizontal" {{action "save" on="submit"}}>
  <div class="form-group">
    <label for="when" class="col-sm-2 control-label">When</label>
    <div class="col-sm-10">
      {{bs-datetimepicker date=(readonly model.datetime)
        updateDate=(action (mut model.datetime))
        sideBySide=true
        forceDateOutput=true
        id="when"
        format='MMMM D YYYY [at] hh:mm a'}}
    </div>
  </div>

  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{input value=model.description id="description" class="form-control" placeholder="Description"}}
    </div>
  </div>

  <div class="form-group">
    <label for="amount" class="col-sm-2 control-label">Amount</label>
    <div class="col-sm-10">
      <div class="input-group">
        <span class="input-group-addon">$</span>
        {{input value=model.amount id="amount" class="form-control" type="number" min="0.01" step="0.01" placeholder="0.01"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="comment" class="col-sm-2 control-label">Comment</label>
    <div class="col-sm-10">
      {{textarea value=model.comment id="comment" class="form-control" rows="6" placeholder="Comment"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Save</button>
    </div>
  </div>
</form>
