<form class="form-horizontal" {{action "save" on="submit"}}>
  <div class="form-group">
    <label class="col-sm-2 control-label">Time</label>
    <div class="col-sm-10">
      {{bs-datetimepicker date=(readonly model.datetime) updateDate=(action (mut model.datetime)) sideBySide=true forceDateOutput=true}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{input value=model.description id="description" class="form-control" placeholder="Description"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Amount</label>
    <span class="col-sm-10">
      {{input value=model.amount id="amount" class="form-control" type="number" min="0.01" step="0.01" placeholder="0.01"}}
    </span>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Comment</label>
    <div class="col-sm-10">
      {{textarea value=model.comment id="comment" class="form-control" rows="6" placeholder="Comment"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Save</button>
    </div>
  </div>
</form>
