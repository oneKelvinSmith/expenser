<div class="page-header">
  <h1>Users</h1>
</div>

<p>
  {{link-to "New User" "users.new" class="btn btn-default"}}
</p>

{{#if model.length}}
  <table class="table table-hover">
    <thead>
      <tr>
        <th>
          Email
        </th>
        <th>
          Admin
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |user|}}
        <tr id="user-{{user.id}}">
          <td>
            {{user.email}}
          </td>
          <td>
            {{#if user.admin}}
              <span class="col-sm-10 glyphicon glyphicon-ok" aria-hidden="true"/>
            {{/if}}
          </td>
          <td>
            {{link-to "Edit" "users.edit" user}}
          </td>
          <td>
            {{link-to "Show" "users.show" user}}
          </td>
          <td>
            <a href="#" {{action "remove" user}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Users found
  </p>
{{/if}}
